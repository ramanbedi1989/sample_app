<% if signed_in? %>
<%=render 'static_pages/home_if'%>
<% else %>
  <%=render 'static_pages/home_else'%>
<% end %> 
<script>
  $(function(){
    $('textarea').on('keydown',function(){
      var content= $(this).val();
      console.log(content.length);
      if(content != '' ){
      var words_left = 140 - content.length;
      if(words_left > 0){
        $('#words_left').text(words_left);
      }
      else{
        var extra = $(this).val();
        extra =  extra.substring(0,140);
        $(this).val(extra);
      }
      }
    })
  });
</script>